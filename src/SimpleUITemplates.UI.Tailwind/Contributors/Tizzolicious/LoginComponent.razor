<Card Width="420px">
    <CardHeader>
        <div class="flex-col justify-center items-center text-center gap-0">
            <Avatar Name="A" />
            <h3 class="mt-2">Welcome back</h3>
            <small class="muted-color">Sign in to your account to continue</small>
        </div>
    </CardHeader>
    <CardContent>
        <div class="flex-col gap-4 relative">
            <Input TItem="string" Label="Email" Type="email" Placeholder="name@example.com" />
            <Group>
                <a class="absolute -mt-12 right-0 text-sm font-normal" href="#">Forgot password?</a>
                <Input TItem="string" Label="Password" Type="password" Placeholder="••••••••••" />
            </Group>
            <Button Text="Sign in" Class="sign-in-button" Width="100%"  OnClick="HandleLogin" />
            <div class="w-full relative text-center text-xs">
                <span class="muted-color p-1">OR CONTINUE WITH</span>
                <hr class="dark: border-gray-800 -mt-2"/>
            </div>
            <div class="flex justify-between gap-4">
                <Button Type="ButtonType.Outline" Class="sign-in-button" Width="100%" OnClick="HandleGitHubLogin">
                    <Icon Name="github" Type="IconType.Lucide" Size="16px" /> GitHub
                </Button>
                <Button Type="ButtonType.Outline" Class="sign-in-button" Width="100%" OnClick="HandleGoogleLogin">
                    <Icon Name="mail" Type="IconType.Lucide" Size="16px" /> Google
                </Button>
            </div>
        </div>
    </CardContent>
    <CardFooter>
        <div class="flex-col p-4 gap-2 pt-0">
            <small class="text-center muted-color">Don't have an account? <a href="#">Sign up</a></small>
            <small class="text-center muted-color">By signing in, you agree to our <a href="#">Terms of Service</a> and <a href="#">Privacy Policy</a></small>
        </div>
    </CardFooter>
</Card>

@code
{
    private void HandleLogin() { }
    private void HandleGitHubLogin() { }
    private void HandleGoogleLogin() { }
}